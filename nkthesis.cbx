\ProvidesFile{caspervector.cbx}%
	[2012/05/31 v0.1.3 Casper Ti. Vector's biblatex citation style]

\RequireCitationStyle{numeric-comp}
\ExecuteBibliographyOptions{
	autocite = superscript,
	autopunct = false
	maxnames=3,
	minnames=3,
	sorting=none,
}

\providecommand{\mksuperbrackets}[1]{\mkbibsuperscript{\mkbibbrackets{#1}}}

\DeclareCiteCommand{\citep}[\mkbibbrackets]
{%
	\usebibmacro{cite:init}%
	\usebibmacro{prenote}%
}
{%
	\usebibmacro{citeindex}%
	\usebibmacro{cite:comp}%
}
{}
{%
	\usebibmacro{cite:dump}%
	\usebibmacro{postnote}%
}

\DeclareCiteCommand{\cite}[\mksuperbrackets]
{%
	\usebibmacro{cite:init}%
	\let\multicitedelim=\supercitedelim
	\usebibmacro{prenote}%
}
{%
	\usebibmacro{citeindex}%
	\usebibmacro{cite:comp}%
}%
{}
{%
	\usebibmacro{cite:dump}%
	\usebibmacro{postnote}%
}
